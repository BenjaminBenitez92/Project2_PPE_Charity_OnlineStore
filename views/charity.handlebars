<!-- Creates donation request for shopper / where to donate items to. Ex: local hospital / charity foundation etc. !-->

<div class="row">
  <div class="col-auto">
    <h2>Welcome, Receiver! {{shopper}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3></h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Organization to Donate to:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-funding">Quantity requested (#):</label>
        <input class="form-input" type="number" id="project-funding" name="project-funding" />
      </div>
      <div class="form-group">
        <label for="project-desc">Briefly explain why items are in demand:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Request!</button>
      </div>
    </form>
  </div>

  {{#if projects.length}}
  <div class="col-md-6 project-list">
    <h3>Current Donation Requests:</h3>

    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">Remove from donation cart</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="../public/js/profile.js"></script>
